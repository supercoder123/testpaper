<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout_searchbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/search_box_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nature_back_search_back"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_frag_background_layer"
            />

        <EditText
            android:id="@+id/search_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:padding="@dimen/layoutPadding"
            android:inputType="textPersonName"
            android:hint="Search.."
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@drawable/search_box"
            android:layout_marginTop="259dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_search_white_48dp"
            android:layout_alignBottom="@+id/search_box"
            android:layout_alignParentRight="true"
            android:padding="@dimen/searchButtonPadding"
            android:layout_marginRight="@dimen/layoutMargin"
            android:layout_marginEnd="@dimen/layoutMargin"

            android:layout_alignTop="@+id/search_box"
            android:layout_toRightOf="@+id/search_box"
            android:layout_toEndOf="@+id/search_box" />


    </RelativeLayout>



</FrameLayout>